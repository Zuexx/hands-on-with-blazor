@page "/fetchdata"

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table-wrapper">
        <thead class="thead-wrapper">
            <tr>
                <th class="thead-th">Date</th>
                <th class="thead-th">Temp. (C)</th>
                <th class="thead-th">Temp. (F)</th>
                <th class="thead-th">Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr class="tbody-tr">
                    <td class="tbody-td-first">@forecast.Date.ToShortDateString()</td>
                    <td class="tbody-td">@forecast.TemperatureC</td>
                    <td class="tbody-td">@forecast.TemperatureF</td>
                    <td class="tbody-td">@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}
